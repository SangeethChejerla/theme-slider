---
import { ViewTransitions } from 'astro:transitions';
import { getStoredTheme } from '../lib/settings-utils';

interface Props {
	title: string;
}

const { title } = Astro.props;
const initialTheme = getStoredTheme();
---

<!doctype html>
<html lang="en" class={initialTheme}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<slot />
		<script>
			import { applyThemeToDocument, getHue, getStoredTheme } from '../lib/settings-utils';
			
			function updateTheme() {
				const theme = getStoredTheme();
				applyThemeToDocument(theme);
				
				const hue = getHue();
				document.documentElement.style.setProperty('--primary-hue', hue.toString());
			}

			// Run on initial load
			updateTheme();

			// Setup for view transitions
			document.addEventListener('astro:after-swap', updateTheme);
		</script>
	</body>
</html>
