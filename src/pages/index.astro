---
import Layout from '../layouts/Layout.astro';
import ThemeCustomizer from '../components/ThemeCustomizer';
---

<Layout title="Theme Customizer Test">
	<main class="container mx-auto p-4">
		<h1 class="text-4xl font-bold text-primary-500 mb-6">Theme Customizer Test</h1>
		
		<div class="mb-8">
			<ThemeCustomizer client:load />
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
			<div class="p-4 bg-primary-100 text-primary-900 rounded-lg">
				<h2 class="text-2xl font-semibold mb-2">Primary Light</h2>
				<p>This is primary-100 background with primary-900 text.</p>
			</div>
			<div class="p-4 bg-primary-900 text-primary-100 rounded-lg">
				<h2 class="text-2xl font-semibold mb-2">Primary Dark</h2>
				<p>This is primary-900 background with primary-100 text.</p>
			</div>
			<div class="p-4 bg-secondary-200 text-secondary-800 rounded-lg">
				<h2 class="text-2xl font-semibold mb-2">Secondary Light</h2>
				<p>This uses the secondary color palette.</p>
			</div>
			<div class="p-4 bg-accent-200 text-accent-800 rounded-lg">
				<h2 class="text-2xl font-semibold mb-2">Accent Light</h2>
				<p>This uses the accent color palette.</p>
			</div>
		</div>

		<div class="mt-8 space-y-4">
			<button class="px-4 py-2 bg-primary-500 text-white rounded hover:bg-primary-600 transition">
				Primary Button
			</button>
			<button class="px-4 py-2 bg-secondary-500 text-white rounded hover:bg-secondary-600 transition">
				Secondary Button
			</button>
			<button class="px-4 py-2 bg-accent-500 text-white rounded hover:bg-accent-600 transition">
				Accent Button
			</button>
		</div>
	</main>
</Layout>

<style>
	:root {
		--primary-hue: 250; /* Default hue */
	}
</style>

<script>
	// This script ensures the theme is applied on the client-side
	import { applyThemeToDocument, getHue, getStoredTheme } from '../lib/settings-utils';
	
	const theme = getStoredTheme();
	applyThemeToDocument(theme);
	
	const hue = getHue();
	document.documentElement.style.setProperty('--primary-hue', hue.toString());
</script>
